<Window x:Class="Project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="500"
        Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="537*" />
            <ColumnDefinition Width="58*" />
            <ColumnDefinition Width="14*" />
            <ColumnDefinition Width="191*" />
        </Grid.ColumnDefinitions>
        <Label Content="Star Info"
               HorizontalAlignment="Left"
               Margin="55,78,0,0"
               VerticalAlignment="Top"
               FontWeight="Bold"
               FontSize="30" />
        <Label Content="Star Name"
               HorizontalAlignment="Left"
               Margin="55,146,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.497,-0.459" />
        <Label Content="DoB"
               HorizontalAlignment="Left"
               Margin="55,191,0,0"
               VerticalAlignment="Top" />
        <Label Content="Description&#xD;&#xA;"
               HorizontalAlignment="Left"
               Margin="55,237,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.515,1.121"
               Height="32" />
        <TextBox HorizontalAlignment="Left"
                 Margin="152,146,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120"
                 x:Name="txtName"
                 Height="26" />
        <DatePicker HorizontalAlignment="Left"
                    Margin="152,191,0,0"
                    VerticalAlignment="Top"
                    Width="118"
                    Height="26"
                    x:Name="txtDoB" />
        <CheckBox Content="&#xD;&#xA;"
                  HorizontalAlignment="Left"
                  Margin="152,292,0,0"
                  VerticalAlignment="Top"
                  x:Name="txtGender" />
        <Label Content="IsMale&#xA;"
               HorizontalAlignment="Left"
               Margin="55,286,0,0"
               VerticalAlignment="Top" />
        <Button Content="Add To List"
                HorizontalAlignment="Left"
                Margin="88,399,0,0"
                VerticalAlignment="Top"
                Height="30"
                Width="151"
                Click="Add_Button_Click" />
        <Button Content="Send to Server"
                HorizontalAlignment="Left"
                Margin="322,399,0,0"
                VerticalAlignment="Top"
                Height="30"
                Width="468"
                Grid.ColumnSpan="4"
                Click="Send_Button_Click" />
        <TextBox HorizontalAlignment="Left"
                 Margin="322,56,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="468"
                 Height="343"
                 Grid.ColumnSpan="4"
                 x:Name="txtList" />
        <TextBox HorizontalAlignment="Left"
                 Margin="150,242,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120"
                 RenderTransformOrigin="0.485,4.098"
                 Height="22"
                 x:Name="txtDescription" />
        <Label Content="Nationality"
               HorizontalAlignment="Left"
               Height="26"
               Margin="55,347,0,0"
               VerticalAlignment="Top"
               Width="83" />
        <TextBox HorizontalAlignment="Left"
                 Margin="152,347,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120"
                 RenderTransformOrigin="0.485,4.098"
                 Height="26"
                 x:Name="txtNationality" />

    </Grid>
</Window>
