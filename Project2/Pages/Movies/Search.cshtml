@page
@model Project2.Pages.Movies.SearchModel
@{
    ViewData["Title"] = "Search Movies";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        /* Reset and basic styles */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            line-height: 1.6;
            padding: 20px;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        /* Search form */
        .search-form {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #f5f5f5;
            border-radius: 5px;
        }

        .search-input {
            padding: 8px;
            width: 300px;
            margin-right: 10px;
            border: 1px solid #ddd;
            border-radius: 3px;
        }

        .search-button {
            padding: 8px 15px;
            background-color: #4682B4;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            .search-button:hover {
                background-color: #3a6d96;
            }

        /* Style for table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            font-weight: normal;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        

        /* Navigation */
        .nav-links {
            margin-bottom: 20px;
        }

            .nav-links a {
                margin-right: 15px;
                text-decoration: none;
                color: #4682B4;
            }

                .nav-links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <h1>Search Movies</h1>

    <div class="nav-links">
        <a href="/Movies/Search">Search</a>
        <a href="/Movies/Filter">Filter</a>
        <a href="/Movies/Director_Movie">By Director</a>
    </div>

    <div class="search-form">
        <form method="get" action="/Movies/Search">
            <input type="text" name="searchTerm" value="@Model.SearchTerm" class="search-input" placeholder="Search for movies by title, director, genre, description...">
            <button type="submit" class="search-button">Search</button>
        </form>
        <div style="margin-top: 8px; font-size: 12px; color: #666;">
            Search finds matches in titles, descriptions, directors, genres, stars, producers, and language.
        </div>
    </div>

    <div class="table-responsive">
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Release Date</th>
                    <th>Description</th>
                    <th>Language</th>
                    <th>Director</th>
                    <th>Producer</th>
                    <th>Stars</th>
                    <th>Genres</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td>@movie.Title</td>
                        <td>@(movie.ReleaseDate.HasValue ? movie.ReleaseDate.Value.ToString("MM/dd/yyyy") : "")</td>
                        <td>@movie.Description</td>
                        <td>@movie.Language</td>
                        <td>@(movie.Director != null ? movie.Director.FullName : "")</td>
                        <td>@(movie.Producer != null ? movie.Producer.Name : "")</td>
                        <td>
                            @if (movie.Stars != null && movie.Stars.Any())
                            {
                                @foreach (var star in movie.Stars)
                                {
                                    <div>@star.FullName</div>
                                }
                            }
                        </td>
                        <td>
                            @if (movie.Genres != null && movie.Genres.Any())
                            {
                                @foreach (var genre in movie.Genres)
                                {
                                    <div>@genre.Title</div>
                                }
                            }
                        </td>
                        <td>
                            <a id="deleteButton" asp-page="Search" asp-page-handler="Delete" asp-route-movieId="@movie.Id" asp-route-searchTerm="@Model.SearchTerm">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="~/lib/microsoft-signalr/signalr.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>